<?xml version="1.0" encoding="utf-8"?>
<tk.zwander.common.views.WidgetFrameHideHintView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="0dp"
    tools:layout_width="300dp"
    tools:layout_height="200dp"
    app:contentPadding="8dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hint_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_gesture_two_tap"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/hide_hint_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/hide_gesture_hint"
                android:scrollbars="vertical"
                android:textSize="18sp"
                tools:textSize="28sp"
                tools:ignore="NestedWeights"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ok_for_hide_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@android:string/ok"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                />

        </LinearLayout>

    </LinearLayout>

</tk.zwander.common.views.WidgetFrameHideHintView>